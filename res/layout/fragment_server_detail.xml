<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res/com.henkelsoft.trekyourself"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.henkelsoft.trekyourself.ServerDetail$PlaceholderFragment" >

    <com.henkelsoft.trekyourself.TextViewTrek
        android:id="@+id/detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Detail :"
        android:textColor="@color/h2"
        android:textSize="40sp"
        foo:customFont="swissbt.ttf" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp" >




        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/shipView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ship2" />

    <com.henkelsoft.trekyourself.TextViewTrek
        android:id="@+id/serverDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Details: lots of stuff"
        android:textColor="@color/h2"
        android:textSize="30sp"
        foo:customFont="swissbt.ttf" />
        
        
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>



</RelativeLayout>